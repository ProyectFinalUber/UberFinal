

@{
    ViewBag.Title = "Details";
}
<h2>DETALLES DE LOS PEDIDOS</h2>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>
                    CLIENTE
                </th>
                <th>
                    Direccion
                </th>
                <th>
                    Plato
                </th>
                <th>
                    Precio
                </th>
            </tr>
            @foreach (var elemento in Model)
            {
                <tr>
                    <td>@elemento.Cliente</td>
                    <td>@elemento.Direccion</td>
                    <td>@elemento.Platos</td>
                    <td>@elemento.Precio</td>
                   <td>
                       <input onclick="document.location.href='@Url.Content("~/pedidos/FINALIZADO/?ID="+elemento.ID_Ref)'" type="submit" value="PEDIDO FINALIZADO!" class="btn bnt-default" max="1" list="1" />

                   </td>
                   
                </tr>
            }
            
            

        </table>
       
        
     
        
        

    </div>
</div>
