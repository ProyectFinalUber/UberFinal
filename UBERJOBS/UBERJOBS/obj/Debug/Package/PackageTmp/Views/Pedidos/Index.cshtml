
@{
    ViewBag.Title = "Index";
}

<h2>LISTA DE USUARIO SIN ATENDER</h2>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped">
            <tr>
                <th>
                    CLIENTE
                </th>
                <th>
                    Direccion
                </th>
                <th>
                    TOTAL 
                </th>
            </tr>
            @foreach(var elemento in Model)
            {
                <tr>
                    <td>@elemento.Cliente</td>
                    <td>@elemento.Direccion</td>
                    <td>@elemento.Total</td>
                    <td>
                        <input onclick="document.location.href='@Url.Content("~/pedidos/DETALLES/?ID="+elemento.ID_Ref)'" type="button" value="REALIZAR PEDIDO!" class="btn bnt-default" />
                    </td>
                </tr>
            }
            </table>
</div>
</div>